<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#FFF3F3F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Crime:  "
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#000"
            android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Status:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/post_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Unsolved"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#FFBB4E4E"
            android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayoutzip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/crime_zipcode"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#FFCBCBCB"
                android:padding="10dp"
                android:text="ZipCode: "
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/crime_city"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="10dp"
                android:text="City: "
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/nearest_police"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Area Police Station Contact no. : "
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#000"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearlayoutcontact"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFEEDE"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/callme" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="50dp"
                android:text="0000000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#00f"
                android:textSize="25sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Description: \n   "
            android:textColor="#000"
            android:visibility="gone" />

        <Button
            android:id="@+id/onDetails"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#aaa"
            android:elevation="2dp"
            android:onClick="onDetailsClick"
            android:text="More  Details"
            android:textColor="#000" />
    </LinearLayout>

</android.support.v7.widget.CardView>